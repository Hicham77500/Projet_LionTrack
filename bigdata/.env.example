# ============================================================================
# LionTrack - BigData Environment Configuration
# ============================================================================

# ========== MONGODB (Existant) ==========
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/liontrack?retryWrites=true&w=majority
JWT_SECRET=your_super_secret_jwt_key_here
NODE_ENV=production

# ========== NODEJS API ==========
PORT=4001
API_HOST=0.0.0.0

# ========== AIRFLOW (Optionnel) ==========
AIRFLOW_API_TOKEN=your_airflow_token_here
AIRFLOW_BASE_URL=http://localhost:8080

# ========== POSTGRESQL (Data Warehouse) ==========
PG_HOST=postgres
PG_PORT=5432
PG_DATABASE=liontrack_warehouse
PG_USER=liontrack
PG_PASSWORD=liontrack_secure_pass
PG_POOL_MIN=5
PG_POOL_MAX=20

# ========== KAFKA ==========
KAFKA_BROKERS=kafka:9092
KAFKA_CONSUMER_GROUP=liontrack-consumers
KAFKA_ENABLE_IDEMPOTENCE=true
KAFKA_COMPRESSION_TYPE=gzip

# ========== SPARK ==========
SPARK_MASTER=spark://spark-master:7077
SPARK_WORKER_MEMORY=2g
SPARK_WORKER_CORES=2
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g
SPARK_EXECUTOR_CORES=2

# ========== MINIO (Object Storage) ==========
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET_NAME=liontrack-datalake

# ========== MONITORING ==========
PROMETHEUS_SCRAPE_INTERVAL=15s
GRAFANA_ADMIN_PASSWORD=admin
ENABLE_ALERTS=true

# ========== LOGGING ==========
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========== FEATURE FLAGS ==========
ENABLE_KAFKA_PRODUCER=true
ENABLE_SPARK_STREAMING=true
ENABLE_DATA_QUALITY_CHECKS=true
ENABLE_MONITORING=true
